<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_nosearch"
        layout="@layout/toolbar_regular" />

    <include
        android:id="@+id/loading"
        layout="@layout/loading" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="12">

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/tf_nik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="8"
                app:alwaysShowHint="true"
                app:isResponsiveIconColor="true"
                app:labelText="NIK"
                app:panelBackgroundColor="@color/colorBgEdittext"
                app:primaryColor="@color/text_color"
                app:secondaryColor="@color/text_color"
                app:useDenseSpacing="true">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_nik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan NIK"
                    android:inputType="number"
                    android:maxLength="16" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <Button
                android:id="@+id/bt_cek_nik_dedupe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:background="@drawable/shapeborderprimary"
                android:text="Cek DEDUPE"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="98">

            <LinearLayout
                android:id="@+id/list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cv_pengecekan_internal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tt_pengecekan_internal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Pengecekan Internal"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_below="@+id/tv_do"
                                android:background="#DCDCDC" />

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="6dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="Tanggal Pengecekan Deduplikasi*"
                                        android:textColor="#595959"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="Write Off"
                                        android:textColor="#595959"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="6dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text=":"
                                        android:textColor="#595959"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text=":"
                                        android:textColor="#595959"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="6dp">

                                    <TextView
                                        android:id="@+id/tv_datecheck"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="{Tanggal Pengecekan Deduplikasi}"
                                        android:textColor="#595959"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/tv_write_off"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="{Write Off}"
                                        android:textColor="#595959"
                                        android:textSize="12sp" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cv_pengecekan_wise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tt_pengecekan_wise"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Pengecekan Internal (MIS/CIF)"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_below="@+id/tv_do"
                                android:background="#DCDCDC" />

                            <LinearLayout
                                android:id="@+id/refresh_pengecekan_wise"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_list_pengecekan_wise"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="vertical" />
                            </LinearLayout>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_pengecekan_wise"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Data Belum Tersedia"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_pengecekan_pembiayaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tt_pengecekan_pembiayaan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Pengecekan Portofolio Internal (Pembiayaan)"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_below="@+id/tv_do"
                                android:background="#DCDCDC" />

                            <LinearLayout
                                android:id="@+id/refresh_pengecekan_pembiayaan"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="0dp"
                                android:clickable="true"
                                android:paddingHorizontal="10dp">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_list_pengecekan_pembiayaan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="vertical" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_pengecekan_pembiayaan"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Data Belum Tersedia"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cv_pengecekan_pendanaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tt_pengecekan_pendanaan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Pengecekan Portofolio Internal (Pendanaan)"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_below="@+id/tv_do"
                                android:background="#DCDCDC" />

                            <LinearLayout
                                android:id="@+id/refresh_pengecekan_pendanaan"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="0dp"
                                android:clickable="true"
                                android:paddingHorizontal="10dp">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_list_pengecekan_pendanaan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="vertical" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_pengecekan_pendanaan"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Data Belum Tersedia"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cv_pengecekan_sifo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tt_pengecekan_sifo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Pengecekan Pending Dokumen (SIFO)	"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_below="@+id/tv_do"
                                android:background="#DCDCDC" />

                            <LinearLayout
                                android:id="@+id/refresh_pengecekan_sifo"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="0dp"
                                android:clickable="true"
                                android:paddingHorizontal="10dp">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_list_pengecekan_sifo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="vertical" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_pengecekan_sifo"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Data Belum Tersedia"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_lanjut_dedupe"
                style="@style/Bordered.Button.Custom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Lanjut"
                tools:ignore="NestedWeights" />
        </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
