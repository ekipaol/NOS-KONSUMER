<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_nosearch" />
    <include android:id="@+id/loading" layout="@layout/loading"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_b"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:text="Kalkulator Simulasi Angsuran"
                    android:textSize="16sp" />

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_plafond_yang_dibutuhkan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_plafond"
                    app:isResponsiveIconColor="true"
                    app:labelText="Plafond Yang Dibutuhkan"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_plafond_yang_dibutuhkan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        app:prefix="Rp. " />
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Plafond Yang Dibutuhkan-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_jangkawaktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_tenor"
                    app:isResponsiveIconColor="true"
                    app:labelText="Jangka Waktu"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_jangka_waktu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        app:suffix="Bulan" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Jangka Waktu-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_pricingsetara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_rupiah"
                    app:isResponsiveIconColor="true"
                    app:labelText="Pricing Setara"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_pricingsetara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        app:suffix="%"
                        tools:ignore="DuplicateIds" />
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Pricing Setara-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_b"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:text="Kalkulator Simulasi Angsuran"
                    android:textSize="16sp" />

                <include layout="@layout/loading" />
                <!--Kalkulator Simulasi Angsuran-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_pilihanasuransipenjaminan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_district"
                    app:isResponsiveIconColor="true"
                    app:endIcon="@drawable/ic_keyboard_arrow_down_black_24dp"
                    app:labelText="Input Pilihan Asuransi Penjaminan"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">
                    <!--Treatment Biaya Materai-->
                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_pilihan_asuransi_penjaminan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih"
                        tools:ignore="DuplicateIds" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <!--Input Pilihan Asuransi Pinjaman-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_biayaasuransi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_rupiah"
                    app:isResponsiveIconColor="true"
                    app:labelText="Biaya Asuransi *"
                    app:panelBackgroundColor="@color/colorDisableEdit"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_biaya_asuransi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="0"
                        app:prefix="Rp. " />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Biaya Asuransi-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_treatment_biaya_asuransi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"

                    android:paddingRight="20dp"
                    app:endIcon="@drawable/ic_keyboard_arrow_down_black_24dp"
                    app:iconSignifier="@drawable/ic_district"
                    app:isResponsiveIconColor="true"
                    app:labelText="Treatment Biaya Asuransi"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_treatment_biaya_asuransi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih"
                        tools:ignore="DuplicateIds" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Treatment Biaya Asuransi-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_biaya_asuransi_khusus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_rupiah"
                    app:isResponsiveIconColor="true"
                    app:labelText="Biaya Asuransi Khusus"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_biaya_asuransi_khusus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="0"
                        app:prefix="Rp. " />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Biaya Asuransi Khusus-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_treatment_biaya_asuransi_khusus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:endIcon="@drawable/ic_keyboard_arrow_down_black_24dp"
                    app:iconSignifier="@drawable/ic_district"
                    app:isResponsiveIconColor="true"
                    app:labelText="Treatment Biaya Asuransi Khusus"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_treatment_biaya_asuransi_khusus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih"
                        tools:ignore="DuplicateIds" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Treatment Biaya Asuransi Khusus-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_biaya_administrasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_rupiah"
                    app:isResponsiveIconColor="true"
                    app:labelText="Biaya Administrasi*"
                    app:panelBackgroundColor="@color/colorDisableEdit"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_biaya_administrasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="0"
                        app:prefix="Rp. "
                        tools:ignore="DuplicateIds" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Biaya Administrasi-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_treatment_biaya_administrasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_district"
                    app:isResponsiveIconColor="true"
                    app:labelText="Treatment Biaya Administrasi"
                    app:panelBackgroundColor="@color/colorDisableEdit"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_treatment_biaya_administrasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="DuplicateIds" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Biaya Penalti-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_biayapenalti_khusus_takeover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_rupiah"
                    app:isResponsiveIconColor="true"
                    app:labelText="Biaya Penalti (Khusus Take Over)*"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">
                    <!--Biaya Penalti (Khusus Take Over)-->
                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_biayapenalti_khusus_takeover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="0"
                        app:prefix="Rp. " />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Treatment Biaya Penalti-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_treatment_biaya_penalti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"

                    android:paddingRight="20dp"
                    app:endIcon="@drawable/ic_keyboard_arrow_down_black_24dp"
                    app:iconSignifier="@drawable/ic_district"
                    app:isResponsiveIconColor="true"
                    app:labelText="Treatment Biaya Penalti"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_treatment_biaya_penalti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih"
                        tools:ignore="DuplicateIds" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Biaya Materai-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_biayamaterai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_rupiah"
                    app:isResponsiveIconColor="true"
                    app:labelText="Biaya Materai"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_biayamaterai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="0"
                        app:prefix="Rp. " />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Treatment Biaya Materai-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_treatment_biaya_materai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_district"
                    app:isResponsiveIconColor="true"
                    app:labelText="Treatment Biaya Materai"
                    app:panelBackgroundColor="@color/colorDisableEdit"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">
                    <!--Treatment Biaya Materai-->
                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_treatment_biaya_materai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="DuplicateIds" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Biaya Flagging-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_biaya_flagging"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_rupiah"
                    app:isResponsiveIconColor="true"
                    app:labelText="Biaya Flagging"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_biaya_flagging"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="0"
                        app:prefix="Rp. " />
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <!--Biaya Mitra Fronting-->
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_biaya_mitra_fronting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:iconSignifier="@drawable/ic_rupiah"
                    app:isResponsiveIconColor="true"
                    app:labelText="Biaya Mitra Fronting"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_biaya__mitra_fronting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="0"
                        app:prefix="Rp. " />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:paddingBottom="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="250dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorDisableEdit"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli_b"
                                android:text="Total Attribusi"
                                android:textSize="14sp" />
                            <!--Total Attribusi-->
                            <TextView
                                android:id="@+id/tv_total_attribusi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli_b"
                                android:inputType="numberDecimal"
                                android:text="Rp. 0"
                                android:textColor="@color/colorBlackHeader"
                                android:textSize="14sp"
                                app:prefix="Rp. "
                                tools:ignore="TouchTargetSizeCheck" />
                            android:layout_weight="1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorDisableEdit"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp"
                            android:paddingTop="5dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli_b"
                                android:text="Total Biaya"
                                android:textSize="14sp" />/>
                            <!--Total Biaya-->
                            <TextView
                                android:id="@+id/tv_total_biaya"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli_b"
                                android:inputType="numberDecimal"
                                android:text="Rp. 0"
                                android:textColor="@color/colorBlackHeader"
                                android:textSize="14sp"
                                app:prefix="Rp. "
                                tools:ignore="DuplicateIds,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorDisableEdit"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp"
                            android:paddingTop="5dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli_b"
                                android:text="Angsuran Bulanan Prapen"
                                android:textSize="14sp" />
                            <!--Angsuran Bulanan-->
                            <TextView
                                android:id="@+id/tv_Angsuran_bulanan_prapen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli_b"
                                android:text="Rp. 0"
                                android:textColor="@color/colorBlackHeader"
                                android:textSize="14sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorDisableEdit"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp"
                            android:paddingTop="5dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli_b"
                                android:text="Angsuran Bulanan Pensiun"
                                android:textSize="14sp" />
                            <!--Angsuran Bulanan-->
                            <TextView
                                android:id="@+id/tv_Angsuran_bulanan_pensiun"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli_b"
                                android:text="Rp. 0"
                                android:textColor="@color/colorBlackHeader"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <!--Button Hitung-->
                        <LinearLayout
                            android:id="@+id/ll_btn_hitung"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorWhite">
                            <!--Button Hitung-->
                            <Button
                                android:id="@+id/btn_hitung"
                                style="@style/Bordered.Button.Custom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hitung" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <!--Button Simpan-->
                        <LinearLayout
                            android:id="@+id/ll_btn_send"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorWhite">

                            <Button
                                android:id="@+id/btn_send"
                                style="@style/Bordered.Button.Custom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Simpan" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </ScrollView>


</RelativeLayout>
