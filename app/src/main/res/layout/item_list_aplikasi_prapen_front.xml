<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_hotprospek_front"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                android:text="{Status}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorPrimarySoft"
                style="@style/JakartaSansBold"

                />

            <View
                android:id="@+id/divider"
                android:layout_below="@+id/tv_do"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DCDCDC"/>

            <LinearLayout
                android:id="@+id/ll_infohotprospek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Nama}"
                        android:padding="2dp"
                        android:textSize="13dp"
                        style="@style/JakartaSansRegular"
                        />


                    <TextView
                        android:id="@+id/tv_plafond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Plafond}"
                        android:padding="2dp"
                        android:textSize="11dp"
                        style="@style/JakartaSansRegular"
                        />

                    <TextView
                        android:id="@+id/tv_tenor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Tenor}"
                        android:padding="2dp"
                        android:textSize="11dp"
                        style="@style/JakartaSansRegular"
                        />
                </LinearLayout>

                <View
                    android:layout_width="4dp"
                    android:layout_height="fill_parent"
                    android:background="@color/colorBackgroundGrey3"/>

                <Button
                    android:id="@+id/bt_pilih"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="Lihat"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tanggal_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Tanggal Entry}"
                android:layout_marginRight="8dp"
                android:padding="4dp"
                android:textSize="11sp"
                android:gravity="right"
                android:textStyle="italic"
                android:textColor="@color/overlay"
                style="@style/JakartaSansRegular"
                />


        </LinearLayout>







</androidx.cardview.widget.CardView>



