<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"

    >

    <include layout="@layout/toolbar_nosearch" />

    <include
        android:id="@+id/loading"
        layout="@layout/loading"></include>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <!--Title Dokumen Produk-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBackgroundCore"
                    android:fontFamily="@font/muli_b"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Dokumen Produk"
                    android:textAlignment="center"
                    android:textSize="16sp" />
                <!--Dokumen Produk-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">
                    <!--Tanda Terima Dokumen SK Pensiun / SK Pengangkatan / SK Terakhir-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <!--Title Tanda Terima Dokumen SK Pensiun / SK Pengangkatan / SK Terakhir-->
                        <RelativeLayout
                            android:id="@+id/d_sk"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Tanda Terima Dokumen SK Pensiun / SK Pengangkatan / SK Terakhir"
                                android:textAlignment="textStart"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <!--Download Tanda Terima Dokumen SK Pensiun / SK Pengangkatan / SK Terakhir-->
                        <ImageView
                            android:id="@+id/btn_sk"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/photo_rounded_blue"
                            android:padding="8dp"
                            android:src="@drawable/ico_download" />
                    </LinearLayout>

                    <!--Form Mutasi Kantor Bayar (Khusus Taspen)-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <!--Title Form Mutasi Kantor Bayar (Khusus Taspen)-->
                        <RelativeLayout
                            android:id="@+id/d_mutasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Form Mutasi Kantor Bayar (Khusus Taspen)"
                                android:textAlignment="textStart"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <!--Download Form Mutasi Kantor Bayar (Khusus Taspen)-->
                        <ImageView
                            android:id="@+id/btn_mutasi"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/photo_rounded_blue"
                            android:padding="8dp"
                            android:src="@drawable/ico_download" />
                    </LinearLayout>

                    <!--Surat Kuasa & Pernyataan Flagging-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <!--Title Surat Kuasa & Pernyataan Flagging-->
                        <RelativeLayout
                            android:id="@+id/d_kuasa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Surat Kuasa dan Pernyataan Flagging"
                                android:textAlignment="textStart"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <!--Download Surat Kuasa & Pernyataan Flagging-->
                        <ImageView
                            android:id="@+id/btn_kuasa"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/photo_rounded_blue"
                            android:padding="8dp"
                            android:src="@drawable/ico_download" />
                    </LinearLayout>

                    <!--Surat Pernyataan dan Kuasa Pembiayaan-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <!--Title Surat Pernyataan dan Kuasa Pembiayaan-->
                        <RelativeLayout
                            android:id="@+id/d_pernyataan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Surat Pernyataan dan Kuasa Pembiayaan"
                                android:textAlignment="textStart"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <!--Download Surat Pernyataan dan Kuasa Pembiayaan-->
                        <ImageView
                            android:id="@+id/btn_pernyataan"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/photo_rounded_blue"
                            android:padding="8dp"
                            android:src="@drawable/ico_download" />
                    </LinearLayout>

                    <!--SUP Pembiayaan Retail / Pensiun / Pra Pensiun-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <!--Title SUP Pembiayaan Retail / Pensiun / Pra Pensiun-->
                        <RelativeLayout
                            android:id="@+id/d_sup"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_b"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="SUP Pembiayaan Retail / Pensiun / Pra Pensiun"
                                android:textAlignment="textStart"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <!--Download SUP Pembiayaan Retail / Pensiun / Pra Pensiun-->
                        <ImageView
                            android:id="@+id/btn_sup"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/photo_rounded_blue"
                            android:padding="8dp"
                            android:src="@drawable/ico_download" />
                    </LinearLayout>
                </LinearLayout>
                <!--Akad Murabahah-->
                <LinearLayout
                    android:id="@+id/akadmurabahah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--Title Dokumen Murabahah-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorBackgroundCore"
                        android:fontFamily="@font/muli_b"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Dokumen Murabahah"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <!--Dokumen Murabahah-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">

                        <!--Purchase Order-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <!--Title Purchase Order-->
                            <RelativeLayout
                                android:id="@+id/d_po"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Purchase Order"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Purchase Order-->
                            <ImageView
                                android:id="@+id/btn_po"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>

                        <!--Akad Wakalah-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <!--Title Akad Wakalah-->
                            <RelativeLayout
                                android:id="@+id/d_akad_wakalah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Akad Wakalah"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Akad Wakalah-->
                            <ImageView
                                android:id="@+id/btn_akad_wakalah"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>

                        <!--Akad Murabahah-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <!--Title Akad Wakalah-->
                            <RelativeLayout
                                android:id="@+id/d_akad_murabahah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Download Semua Dokumen Murabahah"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Akad Murabahah-->
                            <ImageView
                                android:id="@+id/btn_akad_murabahah"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>

                        <!--Jadwal Angsuran Murabahah (Lampiran)-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <!--Title Jadwal Angsuran Murabahah (Lampiran)-->
                            <RelativeLayout
                                android:id="@+id/d_jadwal_angsuran"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Jadwal Angsuran Murabahah (Lampiran)"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Jadwal Angsuran Murabahah (Lampiran)-->
                            <ImageView
                                android:id="@+id/btn_jadwal_angsuran"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>

                        <!--Surat Tanda Terima Barang-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <!--Title Surat Tanda Terima Barang-->
                            <RelativeLayout
                                android:id="@+id/d_terima_barang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Surat Tanda Terima Barang"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Surat Tanda Terima Barang-->
                            <ImageView
                                android:id="@+id/btn_terima_barang"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <!--Akad Ijarah-->
                <LinearLayout
                    android:id="@+id/akadijarah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--Title Dokumen Ijarah-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorBackgroundCore"
                        android:fontFamily="@font/muli_b"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Dokumen Ijarah"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <!--Dokumen Ijarah-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">

                        <!--Purchase Order Ijarah-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <!--Title Purchase Order Ijarah-->
                            <RelativeLayout
                                android:id="@+id/d_po_Ijarah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Purchase Order"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Purchase Order Ijarah-->
                            <ImageView
                                android:id="@+id/btn_po_Ijarah"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>

                        <!--Akad Wakalah-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <!--Title Akad Wakalah-->
                            <RelativeLayout
                                android:id="@+id/d_akad_wakalah_Ijarah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Akad Wakalah"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Akad Wakalah-->
                            <ImageView
                                android:id="@+id/btn_akad_wakalah_Ijarah"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>

                        <!--Akad Ijarah-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <!--Title Akad Ijarah-->
                            <RelativeLayout
                                android:id="@+id/d_akad_ijarah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="download semua dokumen akad Ijarah"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Akad Ijarah-->
                            <ImageView
                                android:id="@+id/btn_akad_ijarah"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>

                        <!--Jadwal Angsuran Ujrah (Lampiran)-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            >
                            <!--Title Jadwal Angsuran Ujrah (Lampiran)-->
                            <RelativeLayout
                                android:id="@+id/d_angsuran_ujrah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Jadwal Angsuran Ujrah (Lampiran)"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Jadwal Angsuran Ujrah (Lampiran)-->
                            <ImageView
                                android:id="@+id/btn_angsuran_ujrah"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
                                android:src="@drawable/ico_download" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--Akad MMQ-->
                <LinearLayout
                    android:id="@+id/akadmmq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--Title Dokumen MMQ-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorBackgroundCore"
                        android:fontFamily="@font/muli_b"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Dokumen MMQ"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <!--Dokumen MMQ-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">

                        <!--Laporan Penilaian Aset MMQ -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <!--Title Laporan Penilaian Aset MMQ -->
                            <RelativeLayout
                                android:id="@+id/d_asset_mmq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Laporan Penilaian Aset MMQ "
                                    android:textAlignment="textStart"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                            <!--Download Laporan Penilaian Aset MMQ -->
                            <ImageView
                                android:id="@+id/btn_asset_mmq"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@drawable/photo_rounded_blue"
                                android:padding="8dp"
