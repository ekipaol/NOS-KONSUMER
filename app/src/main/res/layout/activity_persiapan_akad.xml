                                android:padding="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_b"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="10dp"
