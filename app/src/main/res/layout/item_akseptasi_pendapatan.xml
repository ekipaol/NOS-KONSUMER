<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_akseptasi_pendapatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundGrey1"
                android:gravity="center"
                android:padding="12dp"
                android:text="{Title}"
                android:textColor="@color/colorBlackHeader"
                android:textSize="14sp"
                android:textStyle="bold" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/tf_pilihan_akseptasi_pendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:endIcon="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:isResponsiveIconColor="true"
                app:labelText="Nama Komponen Pendapatan"
                app:panelBackgroundColor="@color/colorBgEdittext"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/colorPrimary"
                app:useDenseSpacing="true"
                tools:ignore="DuplicateIds">
                <!--Treatment Biaya Materai-->
                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_pilihan_akseptasi_pendapatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Nama Komponen Pendapatan"
                    tools:ignore="DuplicateIds" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:visibility="gone"
                android:id="@+id/tf_parameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:endIcon="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:isResponsiveIconColor="true"
                app:labelText="Nama Komponen Pendapatan"
                app:panelBackgroundColor="@color/colorBgEdittext"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/colorPrimary"
                app:useDenseSpacing="true"
                tools:ignore="DuplicateIds">
                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_parameter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    tools:ignore="DuplicateIds" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tf_input_nominal"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="100"
                    app:isResponsiveIconColor="true"
                    app:labelText="Input Nominal"
                    app:panelBackgroundColor="@color/colorBgEdittext"
                    app:primaryColor="@color/colorPrimary"
                    app:secondaryColor="@color/colorPrimary"
                    app:useDenseSpacing="true"
                    tools:ignore="DuplicateIds">
                    <!--Treatment Biaya Materai-->
                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/et_input_nominal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:inputType="numberDecimal"
                        android:text="0"
                        app:prefix="Rp. "
                        tools:ignore="DuplicateIds" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            </LinearLayout>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/tf_setelah_akseptasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:isResponsiveIconColor="true"
                app:labelText="Setelah Akseptasi"
                app:panelBackgroundColor="@color/colorDisableEdit"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/colorPrimary"
                app:useDenseSpacing="true"
                tools:ignore="DuplicateIds">
                <!--Treatment Biaya Materai-->
                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_setelah_akseptasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:inputType="numberDecimal"
                    android:text="0"
                    app:prefix="Rp. "
                    tools:ignore="DuplicateIds" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/tf_persentase_akseptasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:isResponsiveIconColor="true"
                app:labelText="Persentase Akseptasi"
                app:panelBackgroundColor="@color/colorDisableEdit"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/colorPrimary"
                app:useDenseSpacing="true"
                tools:ignore="DuplicateIds">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_persentase_akseptasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:inputType="numberDecimal"
                    app:suffix="%"
                    tools:ignore="DuplicateIds" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/tf_treatment_pendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                app:endIcon="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:isResponsiveIconColor="true"
                app:labelText="Treatment Pendapatan"
                app:panelBackgroundColor="@color/colorBgEdittext"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/colorPrimary"
                app:useDenseSpacing="true"
                tools:ignore="DuplicateIds">
                <!--Treatment Biaya Materai-->
                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_treatment_pendapatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Treatment Pendapatan"
                    tools:ignore="DuplicateIds" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>