                    android:layout_height="wrap_content"
                    android:text="Pilih"
                    tools:ignore="DuplicateIds" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <!--GAJI-->
            <TextView
                android:id="@+id/norek_gaji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GAJI"
                android:textSize="16sp"
