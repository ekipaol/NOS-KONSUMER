                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <!--Tunjangan-->
            <TextView
                android:id="@+id/norek_tunjangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tunjangan"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/muli_b"
                android:paddingBottom="10dp"/>

            <!-- Nomer Rekening Tunjangan-->
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/tf_norek_tunjangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                app:iconSignifier="@drawable/ic_atm"
                app:isResponsiveIconColor="true"
                app:labelText="Nomer Rekening Tunjangan"
                app:panelBackgroundColor="@color/colorBgEdittext"
                app:primaryColor="@color/colorPrimary"
                app:secondaryColor="@color/colorPrimary"
                app:useDenseSpacing="true">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_norek_tunjangan"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <!-- Nama Bank TUNJANGAN -->
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/tf_nama_bank_tunjangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                app:iconSignifier="@drawable/ic_city"
                app:isResponsiveIconColor="true"
                app:labelText="Nama Bank"
                app:panelBackgroundColor="@color/colorBgEdittext"
