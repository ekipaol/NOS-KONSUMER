<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_upload_dokumen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundGrey1"
            android:gravity="center"
            android:padding="12dp"
            android:text="Menu Monitoring Blokir dan LD"
            android:textColor="@color/colorBlackHeader"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_title"
            android:background="#DCDCDC" />

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_below="@+id/divider">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Application Id"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_application_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{Application Id}"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Nomor Aplikasi"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_nomor_aplikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{Nomor Aplikasi}"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Produk"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_produk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{Produk}"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="File Name"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{File Name}"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Sequence"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_sequence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{Sequence}"
                    android:textSize="12dp" />

            </TableRow>


            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Status pembentukan Blokir"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_status_pembentukan_blokir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{jalan jalan ke bekasi mampir sebentar ke makam mbah surip, jangan jangan kamu saksi, kalau aku yang paling arip}"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Keterangan Blokir"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_keterangan_blokir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{Keterangan Blokir}"
                    android:textSize="12dp" />


            </TableRow>

            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Status pembentukan LD"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_status_pembentukan_ld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{Status pembentukan LD}"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Keterangan LD"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_keterangan_ld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="{Keterangan LD}"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Nomor LD"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nomor_ld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="{Nomor LD}"
                        android:textSize="12dp" />
                </LinearLayout>

            </TableRow>

            <LinearLayout
                android:id="@+id/ll_lihat_dokumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundprimary"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:text="Lihat Dokumen Cover Note Asuransi"
                        android:textSize="12sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@id/btn_lihat_dokumen"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/btn_lihat_dokumen"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingTop="5dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </TableLayout>


        <LinearLayout
            android:id="@+id/ll_info_pipeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>